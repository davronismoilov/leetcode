class Solution:
    def reverse(self, x: int) -> int:
        if (x>=(-2**31)and x<=(2**31-1)):
            if (x<0) :
                x*=-1
                t = str(x)
                a = -1*(int(t[::-1]))
            else :
                t = str(x)
                a = (int(t[::-1]))
        else :
            return 0
        if (a>=(-2**31)and a<=(2**31-1)):
            return a
        else :
            return 0
            
        
